{
  "files.autoSave": "afterDelay",
  "emmet.triggerExpansionOnTab": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.arrowParens": "avoid",
  "prettier.endOfLine": "auto",
  "prettier.jsxSingleQuote": true,
  "prettier.requireConfig": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "editor.cursorBlinking": "expand",
  "html-css-class-completion.enableEmmetSupport": true,
  "tailwindCSS.emmetCompletions": true,
  "powermode.enabled": true,
  "powermode.presets": "flames",
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.codeLensFontFamily": "Fira Code",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "workbench.iconTheme": "material-icon-theme",
  "window.zoomLevel": -1,
  "workbench.colorTheme": "Rainbow Dark",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "workbench.colorCustomizations": {
    "activityBar.background": "#000000",
    "editor.background": "#011627",
  },
  "editor.tokenColorCustomizations": {
    "comments": "#00FF00",
    "functions": "#FF0000",
    "keywords": "#00FF00",
    "strings": "#fff",
    "variables": "#fff",
    "numbers": "#fff",
    "textMateRules": [
      {
        "scope": "keyword.operator",
        "settings": {
          "foreground": "#00FF00",
        },
      }
    ]
  }

}








// 2nd settings(Favorite one)

{
  "editor.fontFamily": "'cascadia code','fira code iscript',Consolas, 'Courier New', monospace",
  "files.autoSave": "afterDelay",
  "emmet.triggerExpansionOnTab": true,
  "editor.formatOnSave": true,
  "prettier.endOfLine": "auto",
  "prettier.jsxSingleQuote": true,
  "prettier.requireConfig": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "editor.cursorBlinking": "expand",
  "html-css-class-completion.enableEmmetSupport": true,
  "tailwindCSS.emmetCompletions": true,
  "powermode.enabled": true,
  "powermode.presets": "flames",
  "editor.fontSize": 13,
  "editor.fontWeight": "500",
  "editor.lineHeight": 1.5,
  "editor.fontLigatures": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.formatOnType": true,
  "editor.tokenColorCustomizations": {
    "keywords": "#00FDD2",
    "functions": "#f50",
    "comments": "#6365fa",
    "textMateRules": [
      {
        "scope": "storage.type.function.js",
        "settings": {
          // "foreground": "#FF00FF",
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": "meta.function-call",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "terminal.foreground": "#00eeff",
    "terminal.background": "#000000",
    "terminalCursor.foreground": "#00e1ff",
    "terminalCursor.background": "#00e1ff"
  },
  "bracketPairColorizer.depreciation-notice": false,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "javascript": false
  },
  "editor.mouseWheelZoom": true,
  "liveServer.settings.donotVerifyTags": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.colorTheme": "Cobalt2",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "workbench.startupEditor": "none",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  }
}


  
